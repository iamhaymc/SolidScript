{
  "compilerOptions": {
    "pretty": true,
    "strict": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "removeComments": true,
    "declaration": false,
    "sourceMap": false,
    "outDir": "./out"
  },
  "exclude": [
    "./**/node_modules",
    "./out/"
  ],
  "include": [
    "./src/solidscript-pure.ts",
    "./src/solidscript-node.ts",
    "./src/solidscript-cli.ts",
    "./src/polyfill.d.ts"
  ]
}